type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  isVerified: Boolean! @default(value: "false")
  numbers: [Number!]!
  verificationSecret: String @default(value: "")
}

type Number {
  id: ID! @unique
  twilioId: String!
  number: String!
  owner: User!
}

type RecoveryKey {
  id: ID! @unique
  user: User!
  key: String!
  validUntil: String!
}
