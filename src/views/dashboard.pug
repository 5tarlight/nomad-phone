extends templates/layout
include mixins/number

block content
    .dashboard
        if numbers && numbers.length > 0
            h2.dashboard__title 👋🏻 Hi, 
                span here are your numbers:
            ul.dashboard__numbers-list
                each number in numbers
                    +number({
                        number:number.number,
                        country:getCountry(number.country)
                    })
        else
            .dashboard__no-numbers
                h3 You don't have any numbers yet 
                    a(href="/") get yours now!